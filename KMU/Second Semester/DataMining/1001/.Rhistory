filter(start_date<=sales_date& sales_date<=end_date) %>%
group_by(custid) %>%
summarize(amt12=sum(net_amt), nop12=n())
ggplot(cs.v5, aes(wk_pat)) + geom_bar(aes(fill=wk_pat))
